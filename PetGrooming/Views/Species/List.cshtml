@model List<PetGrooming.Models.Species>


@{
    ViewBag.Title = "List";
}

<h2>List Of All Species</h2>
<a href="/Species/Add">Add new</a>

@{

    foreach (var Species in Model)
    {

        <div>
            <span class="hidden">@Species.SpeciesID</span>

            <a href="/Species/show/@Species.SpeciesID">@Species.Name | </a>
            <a href="/Species/Update/@Species.SpeciesID">Update/Edit | </a>
            <!--<a href="/Species/Delete/@Species.SpeciesID">Delete</a>-->
            <a href="/Species/ConfirmDelete/@Species.SpeciesID">Delete</a>
        </div>
    }
}
